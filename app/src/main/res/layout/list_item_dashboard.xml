<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/twenty_dp">

    <TextView
        android:id="@+id/id_list_item_dashboard"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_one_sp"
        android:gravity="center"
        android:background="@drawable/user_name_bg"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/ten_dp"
        android:paddingEnd="@dimen/zero_dp">

        <TextView
            android:id="@+id/user_name_list_item_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp"/>

        <TextView
            android:id="@+id/mail_list_item_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_txt_clr"
            android:textSize="@dimen/fourteen_sp"
            android:layout_marginTop="@dimen/ten_dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    
</LinearLayout>